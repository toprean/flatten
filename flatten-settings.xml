<?xml version="1.0"?>
<opencv_storage>
<Settings>

	<!-- The input to flatten.
		To use an input video  -> give the path of the input video, like "/tmp/x.avi"
		To use an image list   -> give the path to the XML or YAML file containing the list of the images, like "/tmp/circles_list.xml"
		-->
	<input>"/path/to/flatten_image_list.xml"</input>

	<original_image_width>3840</original_image_width>
	<original_image_height>2160</original_image_height>

	<!-- 
		These settings apply to the Firefly 8SE with 90 degree lens.
		intermediate: 3982 x 2240, final: 3840 x 2160 (16:9 aspect ratio)
		intermediate: 3851 x 2166, final: 3840 x 2076 (1.85 aspect ratio)
		-->
	<intermediate_image_width>3851</intermediate_image_width>
	<intermediate_image_height>2166</intermediate_image_height>

	<final_image_width>3840</final_image_width>
	<final_image_height>2076</final_image_height>

	<use_fisheye_model>0</use_fisheye_model>

	<camera_matrix type_id="opencv-matrix">
		<rows>3</rows>
		<cols>3</cols>
		<dt>d</dt>
		<data>
			2.4822948272139797e+03 0. 1.9482870363660872e+03
			0. 2.4822948272139797e+03 1.0286085073066688e+03
			0. 0. 1.
		</data>
	</camera_matrix>

	<distortion_coefficients type_id="opencv-matrix">
		<rows>5</rows>
		<cols>1</cols>
		<dt>d</dt>
		<data>
			-1.3868206912924144e-01
			8.4054723321588656e-02
			3.4759937237368552e-04
			-4.3323549043455009e-04
			0.
		</data>
	</distortion_coefficients>

</Settings>
</opencv_storage>
